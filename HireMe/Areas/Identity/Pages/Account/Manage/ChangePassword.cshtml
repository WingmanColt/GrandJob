@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смяна на парола";
    Layout = "/Areas/Identity/Pages/Dashboard/Layout/_Dashboard.cshtml";
}

<div class="content">
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">@ViewData["Title"]</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a asp-page="/Account/Manage/Index">
                        <i class="flaticon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="#">@ViewData["Title"]</a>
                </li>
            </ul>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-header">
                        <div class="card-title">@ViewData["Title"]</div>
                    </div>

                    <form id="password-form" method="post">
                        <div class="card-body">

                            <div class="form-group row">
                                <label asp-for="Input.OldPassword" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"></label><span class="required-label">*</span>
                                <div class="col-lg-4 col-md-9 col-sm-8">
                                    <input  asp-for="Input.OldPassword" type="password" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-group form-show-validation row">
                                <label asp-for="Input.NewPassword" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"></label><span class="required-label">*</span>
                                <div class="col-lg-4 col-md-9 col-sm-8">
                                    <input asp-for="Input.NewPassword" type="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <div class="form-group form-show-validation row">
                                <label asp-for="Input.ConfirmPassword" class="col-lg-3 col-md-3 col-sm-4 mt-sm-2 text-right"></label><span class="required-label">*</span>
                                <div class="col-lg-4 col-md-9 col-sm-8">
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" name="confirmpassword" required>
                                </div>
                            </div>



                        </div>
                        <div class="card-action">
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-danger">Отказ</button>
                                    <input class="btn btn-success pull-center" type="submit" value="Запази">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





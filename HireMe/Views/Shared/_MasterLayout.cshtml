@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" @*oncontextmenu="return false"*@>
<head>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <meta http-equiv="ScreenOrientation" content="autoRotate:disabled">

    <meta name="author" content="GrandJob">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <meta charset="UTF-8">

    <title>GrandJob | @ViewData["Title"]</title>

    <!-- Favicon-->
    <link rel="icon" href="~/uploads/favicon/favicon.ico" type="image/x-icon" />

    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet" />
    <link rel="stylesheet preload" href="~/customCSS/fonts/flaticon/Flaticon.woff" as="font" crossorigin="anonymous">
    <link rel="stylesheet preload" href="~/customCSS/fonts/fontawesome/fa-brands-400.woff2" as="font" crossorigin="anonymous">
    <link rel="stylesheet preload" href="~/customCSS/fonts/fontawesome/fa-regular-400.woff2" as="font" crossorigin="anonymous">
    <link rel="stylesheet preload" href="~/customCSS/fonts/fontawesome/fa-solid-900.woff2" as="font" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Open+Sans:300,400,600,700"] },
            custom: { "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands"], urls: ["/CustomCSS/Dashboard/fonts.css"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>



    <!--Core-->
    <link rel="preconnect" href="https://cdn.jsdelivr.net/" />
    <link type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link type="text/css" href="~/customCSS/Base/base.min.css" rel="stylesheet" asp-append-version="true" />

    <!--Animate-->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com/" />
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" asp-append-version="true" />

    <!--Extensions-->
    <link type="text/css" href="~/customCSS/Dashboard/plugins/Using/dropdownTheme.min.css" rel="stylesheet" asp-append-version="true" />
    <link type="text/css" href="~/customCSS/Dashboard/plugins/Using/scrollbar.min.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/customJS/Dashboard/core/popper.min.js"></script>

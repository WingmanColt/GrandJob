@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"> 

    <meta name="author" content="GrandJob">
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <meta charset="UTF-8">

    <title>GrandJob | @ViewData["Title"]</title>

    <!-- Favicon-->
    <link rel="icon" href="~/uploads/favicon/favicon.ico" type="image/x-icon" />

    <!--Core-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" asp-append-version="true">

    <link rel="stylesheet" href="~/theme_superio/css/style.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/theme_superio/css/responsive.min.css" asp-append-version="true" />
</head>
	<style>
		tspan { white-space:pre } .t0 { font-size: 44px;fill: #f8f8f8;font-weight: 400;font-family: "Edo", "Edo" } 
        tspan{white-space:pre}.a{font-size: 33px;fill: #000000;font-weight: 700;font-family: "Dongle-Bold", "Dongle"}
	    .main-menu .navigation > li > span, .main-menu .navigation > li > a { color:#fff !important; }
    </style>

<body class="mm-wrapper">

  <div class="page-wrapper">

    <!-- Preloader -->
    @*<div class="preloader"><div class="lds-ripple"><div></div><div></div></div></div>*@


    <!-- Main Header-->
    <partial name="../Home/Partials/_HeaderPartial" />
    <!--End Main Header -->

    @RenderBody()

    <!-- Footer Area -->
    <div class="copyright-text">
      <p>© @DateTime.Today.Year GrandJob. Всички права запазени.</p>
    </div>
</div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
  <script>
  (function($) {
	
	"use strict";
	//Hide Loading Box (Preloader)
	function handlePreloader() {
		if($('.preloader').length){
			$('.preloader').delay(200).fadeOut(500);
		}
	}
    	$(window).on('load', function() {
		handlePreloader();
	});	

})(window.jQuery);
  </script>
</body>
</html>

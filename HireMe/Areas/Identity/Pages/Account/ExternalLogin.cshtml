@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Areas/Identity/Pages/_LayoutLogin.cshtml";
}


    <!-- Info Section -->
    <div class="login-section">
      <div class="image-layer" style="background-image: url(/theme_superio/images/background/12.webp);"></div>
      <div class="outer-box">
        <!-- Login Form -->
        <div class="login-form default-form">
          <div class="form-inner">
            <h3>Вашият профил е свързан с @Model.ProviderDisplayName.</h3>

        <b>
            Успешно сте се удостоверили с <strong> @Model.ProviderDisplayName </strong>.
            Моля, въведете имейл адрес за този сайт по-долу и щракнете върху бутона "Завърши регистрацията", за да завършите
            влизане в системата.
        </b>

            <!--Login Form-->
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

             <div class="form-group">
                <label>Емайл</label>
                <input asp-for="Input.Email" placeholder="Емайл адрес" required>
              </div>

              <div class="form-group">
                <label>Име</label>
                <input asp-for="Input.FirstName" placeholder="Име" required>
              </div>

              <div class="form-group">
                <label>Фамилия</label>
                <input asp-for="Input.LastName" placeholder="Фамилия" required>
              </div>


            <div class="form-group">          
             <div class="form-check">
             @Html.CheckBoxFor(x => x.Input.IsEmployer)              
            <label class="form-check-label" for="flexCheckDefault">
                   Регистрирай ме като работодател
                </label>
             </div>
            </div>

              <div class="form-group">
                <button class="theme-btn btn-style-one" type="submit" name="log-in">Завърши регистрацията</button>
              </div>
            </form>

          </div>
        </div>
        <!--End Login Form -->
      </div>
    </div>
    <!-- End Info Section -->



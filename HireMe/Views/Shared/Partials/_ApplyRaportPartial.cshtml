  @inject SignInManager<User> _signInManager

  @model ApplyRaportViewModel

  @{
    var context = Context.Request;
    var loc = new Uri($"{context.Scheme}://{context.Host}{context.Path}{context.QueryString}");
    var returnUrl = loc.AbsoluteUri;

    var resumeFiles = ViewData["resumeFiles"] is null ? null : ViewData["resumeFiles"] as IEnumerable<SelectListItem>;
    string action = resumeFiles is not null ? (resumeFiles.Any() ? "ApplyWithResume" : "UploadAndApplyResume") : null;

}

  <!-- apply modal -->
<div class="modal" id="apply-modal">
    <!-- Login Form -->
    <div class="login-form default-form">
      <div class="form-inner">
        <h3>Кандидатствай сега</h3>

        @if (!_signInManager.IsSignedIn(User))
       {
        <!--Login Form-->
        <form method="post" asp-controller="Jobs" asp-action="ApplyAsGuest" asp-route-jobId="@Model.Id" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data">
             <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              <label>Пълно име:</label><br>
              <input asp-for="Fullname" class="form-control" /> 
              </div>

             <div class="form-group">
             <label>Емайл:</label><br>
              <input asp-for="Email" class="form-control" /> 
             </div>

             <div class="form-group">
             <input asp-for="File" type="file" />
            </div>


  

        <div class="bottom-box">
          <div class="btn-box row">
              <div class="col-lg-6 col-md-12">
                 <button asp-for="@Model.File" type="submit" class="theme-btn social-btn-two next-btn" id="SubmitApply"><i class="fa fa-upload"></i> Продължи</button>

               </div>
            <div class="col-lg-6 col-md-12">
              <a href="#" class="theme-btn social-btn-two cancel-btn" rel="modal:close"><i class="fa fa-times"></i> Затвори</a>
            </div>
          </div>
        </div>
                </form>
            }
            else
            {
         <!--Login Form-->
        <form method="post" asp-controller="Jobs" asp-action="@action" asp-route-jobId="@Model.Id" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data">
             <div asp-validation-summary="All" class="text-danger"></div>
          <div class="form-group">
            @if (resumeFiles is not null && resumeFiles.Any())
             {
               <select asp-for="resumeFilesId" asp-items="resumeFiles"></select>
             }
             else
             {
                 <input asp-for="File" type="file" />
             }
                </div>


  

        <div class="bottom-box">
          <div class="btn-box row">
              <div class="col-lg-6 col-md-12">
              @if (resumeFiles is not null && resumeFiles.Any())
              {
                 <button type="submit" asp-for="@Model.resumeFilesId" class="theme-btn social-btn-two next-btn" id="SubmitApply"><i class="fa fa-upload"></i> Продължи</button>
              }
              else
              {
                 <button type="submit" asp-for="@Model.File"  class="theme-btn social-btn-two next-btn" id="SubmitApply"><i class="fa fa-upload"></i> Продължи</button>
              }
                        </div>
            <div class="col-lg-6 col-md-12">
              <a href="#" class="theme-btn social-btn-two cancel-btn" rel="modal:close"><i class="fa fa-times"></i> Затвори</a>
            </div>
          </div>
        </div>
                </form>  
            }
        </div>
    </div>
    <!--End Login Form -->
   
</div>



  <!-- raport modal -->
<div class="modal" id="raport-modal">
    <!-- Login Form -->
    <div class="login-form default-form">
      <div class="form-inner">
        <h3>Докладвай</h3>

        <!--Login Form-->
        <form method="post" asp-controller="Message" asp-action="Report" asp-route-postname="@Model.Name" asp-route-returnUrl="@Model.ReturnUrl">
             <div asp-validation-summary="All" class="text-danger"></div>

          <div class="form-group">
            <strong>@Model.Name</strong>
          </div>


          <div class="form-group">
            <label>Причина*</label>
            <textarea asp-for="@Model.Message.Description" class="form-control text required" rows="10" cols="50" style="height:auto;max-width:95%;" required="required" aria-required="true" placeholder="Въведете причината, поради която докладвате тази обява. Опитайте се да дадете колкото се може повече подробности."> </textarea>
            <span asp-validation-for="@Model.Message.Description" class="text-danger"></span>
          </div>

        <div class="bottom-box">
          <div class="btn-box row">
              <div class="col-lg-6 col-md-12">
              <button type="submit" class="theme-btn social-btn-two next-btn"><i class="fa fa-arrow-right"></i> Продължи</button>
               </div>
            <div class="col-lg-6 col-md-12">
              <a href="#" class="theme-btn social-btn-two cancel-btn" rel="modal:close"><i class="fa fa-times"></i> Затвори</a>
            </div>
          </div>
        </div>
        </form>
      </div>
    </div>
    <!--End Login Form -->
   
</div>
@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Проверка на кода за възстановяване";
    Layout = "/Areas/Identity/Pages/_LayoutLogin.cshtml";
}

<p>
    Поискахте да влезете с код за възстановяване. Този вход няма да бъде запомнен, докато не предоставите
    код на приложение за удостоверяване, при влизане или деактивиране на 2FA и влизане отново.
</p>



    <!-- Info Section -->
    <div class="login-section">
      <div class="image-layer" style="background-image: url(/theme_superio/images/background/12.webp);"></div>
      <div class="outer-box">
        <!-- Login Form -->
        <div class="login-form default-form">
          <div class="form-inner">
            <h3>@ViewData["Title"]</h3>

            <!--Login Form-->
               <form asp-route-returnUrl="@Model.ReturnUrl" method="post">


              <div class="form-group">
              <label>Код</label>
               <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="on" placeholder="Емайл" required/>
              </div>


              <div class="form-group">
                <button class="theme-btn btn-style-one" type="submit">Продължи</button>
              </div>
            </form>

          </div>
        </div>
        <!--End Login Form -->
      </div>
    </div>
    <!-- End Info Section -->
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Влез</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}